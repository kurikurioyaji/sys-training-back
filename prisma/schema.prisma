datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int         @id @default(autoincrement())
  userId    Int         @unique
  userName  String
  TestResults TestResult[]
}

model TestResult {
  id          Int      @id @default(autoincrement())
  userId      Int
  categoryId  Int
  answers     String   // JSON形式で保存
  score       Int
  date        DateTime @default(now())
  User        User     @relation(fields: [userId], references: [id])
}

model Question {
  id          Int      @id @default(autoincrement())
  categoryId  Int
  text        String
  choices     String   // JSON形式で保存
  correctAnswer String
  Category    Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id    Int      @id @default(autoincrement())
  name  String
  Questions Question[]
}
